# =========================
# Server
# =========================

PORT=3500
APPLICATION_NAME=Ecommerce Dashboard API

# =========================
# Database
# =========================

# Example:
# mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGO_URL=mongodb://localhost:27017/ecommerce_dashboard
COLLECTION=users

# =========================
# Authentication / JWT
# =========================

# Generate using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key

# =========================
# Email (Nodemailer)
# =========================

# Common services: gmail, outlook, yahoo, smtp
EMAIL_SERVICE=gmail
EMAIL_USERNAME=no-reply@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_NAME="Ecommerce Dashboard"

# =========================
# Mailchimp
# =========================

MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# =========================
# Client URLs
# =========================

LOGINHOST=http://localhost:3000
CLIENTLOGINPAGE=/login
CLIENTRESETPASSURL=/reset-password
CLIENTCONFIRMURL=/confirm-account
